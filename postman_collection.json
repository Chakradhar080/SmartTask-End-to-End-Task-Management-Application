{
  "info": {
    "name": "Task Manager API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman collection for Task Manager API (MySQL + JWT)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpassword\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/signup",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["signup"]
        }
      }
    },
    {
      "name": "Login (Get Token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "testuser", "type": "text" },
            { "key": "password", "value": "testpassword", "type": "text" },
            { "key": "grant_type", "value": "password", "type": "text" }
          ]
        },
        "url": {
          "raw": "http://127.0.0.1:8000/token",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["token"]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/me",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["me"]
        }
      }
    },
    {
      "name": "Get All Tasks",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/tasks",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task description\",\n  \"status\": \"pending\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/tasks",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/tasks/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["tasks", "1"]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Task\",\n  \"description\": \"Updated description\",\n  \"status\": \"in-progress\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/tasks/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["tasks", "1"]
        }
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/tasks/1",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["tasks", "1"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "access_token",
      "value": ""
    }
  ]
}
